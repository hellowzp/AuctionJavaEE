<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="auction-ejbPU" transaction-type="JTA">
    <jta-data-source>java/auction</jta-data-source>
    <class>domain.Bid</class>
    <class>domain.Kind</class>
    <class>domain.State</class>
    <class>domain.Item</class>
    <class>domain.User</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
<!--  http://stackoverflow.com/questions/8938889/filerexception-when-building-java-ee-6-project -->
      <property name="eclipselink.canonicalmodel.subpackage" value="one"/>
    </properties>
  </persistence-unit>
</persistence>
